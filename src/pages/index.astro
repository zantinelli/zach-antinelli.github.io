    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      :root {
        --bg: #0f172a;
        --text: #e2e8f0;
        --text-muted: #94a3b8;
        --accent: #38bdf8;
        --code-bg: #1e293b;
        --border: #334155;
      }

      body {
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Helvetica', 'Arial', sans-serif;
        background: var(--bg);
        color: var(--text);
        line-height: 1.6;
        min-height: 100vh;
      }

      .container {
        max-width: 900px;
        margin: 0 auto;
        padding: 2rem;
      }

      header nav {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding-bottom: 2rem;
        border-bottom: 1px solid var(--border);
        margin-bottom: 3rem;
      }

      h1 {
        font-family: 'JetBrains Mono', 'Fira Code', 'Cascadia Code', 'SF Mono', Monaco, monospace;
        font-size: 2rem;
        font-weight: 700;
        color: var(--text);
        letter-spacing: -0.02em;
      }

      .resume-link {
        color: var(--accent);
        text-decoration: none;
        font-weight: 500;
        padding: 0.5rem 1rem;
        border: 1px solid var(--accent);
        border-radius: 0.375rem;
        transition: all 0.2s;
      }

      .resume-link:hover {
        background: var(--accent);
        color: var(--bg);
      }

      .hero {
        display: grid;
        grid-template-columns: 1fr auto;
        gap: 2rem;
        margin-bottom: 4rem;
        align-items: start;
      }

      .profile img {
        width: 270px;
        height: 270px;
        border-radius: 50%;
        object-fit: cover;
      }

      .code-blocks {
        display: flex;
        flex-direction: column;
        gap: 1rem;
      }

      pre {
        background: var(--code-bg);
        border: 1px solid var(--border);
        border-radius: 0.5rem;
        padding: 1rem;
        overflow-x: auto;
      }

      code {
        font-family: 'JetBrains Mono', 'Fira Code', 'Cascadia Code', 'SF Mono', Monaco, monospace;
        font-size: 0.9rem;
        color: #cbd5e1;
      }

      code.python::before { content: 'ðŸ '; }
      code.go::before { content: 'ðŸŸ¢ '; }
      code.bash::before { content: '$ '; }
      code.powershell::before { content: 'PS> '; }

      .about {
        margin-bottom: 3rem;
      }

      .about p {
        font-size: 1.125rem;
        line-height: 1.8;
        color: var(--text-muted);
      }

      .dogs {
        margin-bottom: 4rem;
        text-align: center;
      }

      .dogs-photo {
        max-width: 100%;
        border-radius: 0.5rem;
        border: 2px solid var(--border);
      }

      .contact {
        margin-bottom: 3rem;
      }

      .contact p {
        font-size: 1.125rem;
        line-height: 1.8;
        color: var(--text-muted);
        margin-bottom: 2rem;
      }

      .recent-project {
        margin-bottom: 4rem;
      }

      .recent-project h2 {
        font-size: 1.5rem;
        font-weight: 600;
        color: var(--text);
        margin-bottom: 1.5rem;
      }

      .project-card {
        background: var(--code-bg);
        border: 1px solid var(--border);
        border-radius: 0.5rem;
        padding: 2rem;
        transition: border-color 0.2s;
      }

      .project-card:hover {
        border-color: var(--accent);
      }

      .project-card h3 {
        font-size: 1.25rem;
        font-weight: 600;
        color: var(--text);
        margin-bottom: 1rem;
      }

      .project-card p {
        font-size: 1rem;
        line-height: 1.6;
        color: var(--text-muted);
        margin-bottom: 1.5rem;
      }

      .project-link {
        display: inline-flex;
        align-items: center;
        color: var(--accent);
        text-decoration: none;
        font-weight: 500;
        transition: transform 0.2s;
      }

      .project-link:hover {
        transform: translateX(4px);
      }

      .social-links {
        display: flex;
        gap: 1.5rem;
        flex-wrap: wrap;
        justify-content: center;
      }

      .social-links a {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        color: var(--text);
        text-decoration: none;
        padding: 0.75rem 1.5rem;
        border: 1px solid var(--border);
        border-radius: 0.5rem;
        transition: all 0.2s;
        font-weight: 500;
      }

      .social-links a:hover {
        border-color: var(--accent);
        color: var(--accent);
        transform: translateY(-2px);
      }

      @media (max-width: 768px) {
        .container {
          padding: 1rem;
        }

        main {
          width: 100%;
        }

        h1 {
          font-size: 1.5rem;
        }

        .hero {
          display: block;
          width: 100%;
        }

        .intro {
          width: 100%;
        }

        .profile {
          text-align: center;
          margin-top: 2rem;
          margin-bottom: 2rem;
          width: 100%;
        }

        .profile img {
          width: 200px;
          height: 200px;
        }

        .code-blocks {
          width: 100%;
        }

        .code-blocks pre {
          font-size: 0.85rem;
        }

        .about,
        .dogs,
        .contact,
        .recent-project {
          width: 100%;
          max-width: 100%;
        }

        .about p,
        .contact p,
        .project-card p {
          font-size: 1.0625rem;
          line-height: 1.7;
        }

        .recent-project h2 {
          font-size: 1.25rem;
        }

        .project-card {
          padding: 1.5rem;
        }

        .project-card h3 {
          font-size: 1.125rem;
        }

        .social-links {
          flex-direction: column;
        }

        .social-links a {
          width: 100%;
          justify-content: center;
        }
      }
    </style>
  </body>
</html>